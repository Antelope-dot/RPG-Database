package rpg;

import java.io.OutputStream;
import java.io.PrintStream;

/**
 * Toimii liitetiedostona
 * @author Ilari Massa
 * @version Mar 20, 2019
 *
 */
public class HahmonEsine {
    
    private int tunnusNro;
    private int iid;
    private String hahmonesine = "";
    private String notes = "";
    
    private static int seuraavaNro = 1;
    
    /**
     * HahmonEsineen muodostaja
     */
    public HahmonEsine() {
        //Ei vielä mitään
    }
    
    /**
     * @param tunnusNro Hahmon id
     * @param iid esineen id
     */
    public HahmonEsine(int tunnusNro, int iid) {
        this.tunnusNro = tunnusNro;
        this.iid = iid;
    }
    
    /**
     * @param tunnusNro hahmon tunnusNro
     */
    public HahmonEsine(int tunnusNro) {
        this.tunnusNro = tunnusNro;
    }
    
    /**
     * hakee esineen id:n
     * @return esineen id
     */
    public int getIID() {
        return iid;
    }
    
    /**
     * @return hakee Hahmon id:n
     * @example
     * <pre name="test">
     *   HahmonEsine  esine = new HahmonEsine();
     *   esine.getIID() === 1;
     * </pre> 
     */
    public int getTunnusNro() {
        return tunnusNro;
    }
    
    /**
     * @param hahmonesine1 esimerkki ohjelma joka täyttää hahmon
     * @param notes1 esineen tiedot
     */
    public void taytaHahmonEsine(String hahmonesine1, String notes1) {
        //this.tunnusNro = tunnusNro;
        //this.iid = iid;
        
        //HahmonEsine hahmoonEsine = new HahmonEsine();
        //hahmonEsine.tayta
        this.hahmonesine = hahmonesine1;
        this.notes = notes1;
    }

    /**
     * Tulostetaan hahmonesine
     * @param out tietovirta johon tulostetaan
     */
    public void tulosta(PrintStream out) {
        //out.println("  " + tyyli);
        out.println(String.format("tunnusNro: %03d" + "\n" + "iid: %03d" + "\n", tunnusNro, iid) + "Esine: " + hahmonesine + "\n" + "Tiedot: " + notes + "\n");
    }
    
    
    /**
     * Tulostetaan hahmon esineiden tiedot
     * @param os tietovirta johon tulostetaan
     */
    public void tulosta(OutputStream os) {
        tulosta(new PrintStream(os));
    }
    
    /**
     * rekisteroi esineen id
     * @return esineen id
     */
    public int rekisteroi() {
        //if (iid!=0) return iid;
        iid = seuraavaNro;
        seuraavaNro++;
        return iid;
        
    }
    
    /**
     * @param args ei käytössä
     */
    public static void main(String[] args) {
        HahmonEsine t = new HahmonEsine();
        t.rekisteroi();
        t.taytaHahmonEsine("Miekka","+1 attack");
        //t.taytaHahmonEsine(2);
        t.tulosta(System.out);
    }
    
}
