package rpg;

import java.io.OutputStream;
import java.io.PrintStream;
import java.util.Random;

/**
 * @author Ilari Massa
 * @version Mar 20, 2019
 *
 */
public class Rotu {
    ///
    private int rid;
    private String rotu;
    private int tunnusNro;
    
    private static int seuraavaNro = 1;
    
    /**
     * 
     */
    public Rotu() {
        // ei mitään
    }
    
    /**
     * Alusteteaan tietyn hahmon rotu
     * @param tunnusNro hahmon  tunnus
     */
    public Rotu(int tunnusNro) {
        this.tunnusNro = tunnusNro;
    }
    
    /**
     * @param id rotu id
     */
    public void taytaRotu(int id) {
        Random rand = new Random();
        int i  = 0 + rand.nextInt(3);
        
        rid = id;
        String[] testirodut = {"Vulcan", "Ainur", "derp"};
        rotu = testirodut[i];
    }
    
    /**
     * @return get hahmon id
     */
    public int getTunnusNro() {
        return tunnusNro;
    }
    
    /**
     * @return get rotu id
     */
    public int getRotuID() {
        return rid;
    }
    
    /**
     * @return rotu 
     */
    public String getRotu() {
        return rotu;
    }
    
    /**
     * @param out tulostaa tietovirran
     */
    public void tulosta(PrintStream out) {
        out.println(rotu);
    }
    
    /**
     * @param os tulostaa tietovirran
     */
    public void tulosta(OutputStream os) {
        tulosta(new PrintStream(os));
    }
    
    /**
     * @return rodun id
     * @example
     * <pre name ="test">
     *  Rotu miekka = new Rotu();
     *  miekka.getRotuID() === 0;
     *  miekka.rekisteroi();
     *  Rotu kirves = new Rotu();
     *  kirves.rekisteroi();
     *  int n1 = miekka.getRotuID();
     *  int n2 = kirves.getRotuID();
     *  n1 === n2-1;
     * </pre>
     */
    public int rekisteroi() {
        rid = seuraavaNro;
        seuraavaNro++;
        return rid;
    }
    
    /**
     * @return hahmon id
     */
    public int getHahmonNro() {
        return tunnusNro;
    }
    
    /**
     * @param args ei käytössä
     */
    public static void main(String[] args) {
        Rotu rotu = new Rotu();
        rotu.taytaRotu(2);
        rotu.tulosta(System.out);
    }

}
